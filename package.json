{
  "name": "melody-app",
  "private": true,
  "workspaces": [
    "server",
    "client",
    "interfaces",
    "constants"
  ],
  "version": "0.0.1",
  "description": "",
  "author": "Baozier",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=16.13.2",
    "npm": ">=8.1.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ValueMelody/melody-app"
  },
  "scripts": {
    "start": "npm run compile && concurrently \"npm run client:start\" \"npm run server:start\"",
    "test": "DOTENV_CONFIG_PATH=./.env.test jest",
    "test-watch": "DOTENV_CONFIG_PATH=./.env.test jest --watch",
    "test-coverage": "DOTENV_CONFIG_PATH=./.env.test jest --coverage --silent",
    "lint": "npm run client:lint && npm run server:lint",
    "lint-fix": "npm run client:lint-fix && npm run server:lint-fix",
    "tsc": "npm run client:tsc && npm run server:tsc",
    "client:start": "npm run start --workspace=client",
    "client:lint": "npm run lint --workspace=client",
    "client:lint-fix": "npm run lint-fix --workspace=client",
    "client:tsc": "npm run tsc --workspace=client",
    "server:start": "npm run start --workspace=server",
    "server:start-check": "npm run start-check --workspace=server",
    "server:build": "npm run build --workspace=server",
    "server:lint": "npm run lint --workspace=server",
    "server:lint-fix": "npm run lint-fix --workspace=server",
    "server:tsc": "npm run tsc --workspace=server",
    "server:migrate": "npm run migrate --workspace=server",
    "compile": "npm run compile --workspace=constants",
    "database:create": "createdb -h 127.0.0.1 -U admin melody",
    "database:drop": "sudo -u postgres psql -c 'DROP DATABASE melody'",
    "database:dump": "pg_dump -h 127.0.0.1 -Fc melody -U admin > ~/Backup/melody.bak",
    "database:restore": "pg_restore -d melody -U admin ~/Backup/melody.bak"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^16.11.6",
    "@types/node-cron": "^3.0.4",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "concurrently": "^7.0.0",
    "eslint": "^8.10.0",
    "eslint-config-react-app": "^7.0.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.29.3",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.8.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "node-cron": "^3.0.2"
  }
}
