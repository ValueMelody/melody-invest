{
  "name": "melody-app",
  "private": true,
  "workspaces": [
    "server",
    "client",
    "interfaces",
    "constants"
  ],
  "version": "0.0.1",
  "description": "",
  "author": "Baozier",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=16.13.2",
    "npm": ">=8.1.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/byn9826/melody-app"
  },
  "scripts": {
    "start": "npm run library:compile && concurrently \"npm run client:start\" \"npm run server:start\"",
    "client:start": "npm run start --workspace=client",
    "client:lint": "npm run lint --workspace=client",
    "server:start": "npm run start --workspace=server",
    "server:lint": "npm run lint --workspace=server",
    "server:migrate": "npm run migrate --workspace=server",
    "library:compile": "npm run compile --workspace=constants",
    "database:create": "createdb -h 127.0.0.1 -U admin melody",
    "database:drop": "sudo -u postgres psql -c 'DROP DATABASE melody'",
    "database:dump": "pg_dump -h 127.0.0.1 -Fc melody -U admin > ~/Dropbox/Temp/melody.bak",
    "database:restore": "pg_restore -d melody -U admin ~/Dropbox/Temp/melody.bak"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.0.2",
    "@types/express": "^4.17.13",
    "@types/ioredis": "^4.28.3",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "concurrently": "^7.0.0",
    "eslint": "^8.0.0",
    "eslint-config-react-app": "^7.0.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-react": "^7.29.3",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.4"
  }
}
