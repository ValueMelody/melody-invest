{
  "name": "melody-app",
  "private": true,
  "workspaces": [
    "server",
    "client",
    "interfaces",
    "constants"
  ],
  "version": "0.0.1",
  "description": "",
  "author": "Baozier",
  "license": "UNLICENSED",
  "engines": {
    "node": "^18.12.1",
    "npm": "^9.1.2",
    "redis-server": "^6.0.16",
    "psql": "^15.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ValueMelody/melody-app"
  },
  "scripts": {
    "prepare": "npm run build --workspace=constants",

    "dev": "npm run prepare && concurrently \"npm run start --workspace=client\" \"npm run start --workspace=server\"",
    "build": "npm run build --workspace=constants && npm run build --workspace=client && npm run build --workspace=server",

    "test": "DOTENV_CONFIG_PATH=./.env.test jest",
    "lint": "npm run lint --workspace=client && npm run lint --workspace=server",
    "tsc": "npm run tsc --workspace=client && npm run tsc --workspace=server",

    "test:watch": "DOTENV_CONFIG_PATH=./.env.test jest --watch",
    "test:coverage": "DOTENV_CONFIG_PATH=./.env.test jest --coverage --silent",
    "lint:fix": "npm run lint:fix --workspace=client && npm run lint:fix --workspace=server",

    "database:create": "createdb -h 127.0.0.1 -U admin melody",
    "database:drop": "sudo -u postgres psql -c 'DROP DATABASE melody'",
    "database:dump": "pg_dump -h 127.0.0.1 -Fc melody -U admin > ~/Backup/melody.bak",
    "database:restore": "pg_restore -d melody -U admin ~/Backup/melody.bak"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "concurrently": "^7.0.0",
    "eslint": "^8.10.0",
    "eslint-config-react-app": "^7.0.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.29.3",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.4",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.8.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.7.0"
  }
}
