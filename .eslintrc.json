{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard", "react-app", "plugin:react/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "react/prop-types": "off",
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": "error",
        "comma-dangle": "off",
        "@typescript-eslint/comma-dangle": ["error", "always-multiline"],
        "arrow-parens": "error",
        "react/react-in-jsx-scope": "off",
        "jsx-quotes": ["error", "prefer-single"]
    }
}